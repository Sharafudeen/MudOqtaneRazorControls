@using Oqtane.Services
@using System.Net
@using System.Text.Json
@using MudBlazor

@inherits MudOqtaneRazorControls.Controls.Module.Base.ActionLink

@inject IUserService UserService


@if (Authorized)
{
    if (OnClick == null)
    {
        @* <NavLink class="@_classname" href="@_url" style="@_style">@((MarkupString)_iconSpan) @_text</NavLink> *@
        <MudButton Color="Color.Primary" Variant="Variant.Filled" Disabled=Disabled Href="@_url">@((MarkupString)IconSpan) @LinkText</MudButton>
    }
    else
    {
        @* <button type="button" class="@_classname" style="@_style" onclick="@OnClick">@((MarkupString)_iconSpan) @_text</button> *@
        <MudButton Color="Color.Primary" Variant="Variant.Filled" Disabled=Disabled OnClick="@OnClick">@((MarkupString)IconSpan) @LinkText</MudButton>

    }
}
